name: "merlin"
version: "1.4"
synopsis:
  "Editor helper, provides completion, typing and sources browsing in Vim and Emacs"
maintainer: "defree@gmail.com"
depends: [
  "menhir"
  "ocaml" {>= "4.00.1" & < "4.02.0"}
  "ocamlbuild" {build}
  "ocamlfind"
  "yojson"
]
build: [
  ["./configure" "--prefix" prefix]
  [make]
]
install: [make "install"]
remove: [make "uninstall"]
