bug-reports: "https://github.com/ocaml/ocaml-ci-scripts/issues"
depends: [
  "jbuilder" {build}
  "jsonm" {build}
  "ocaml"
]
build: [
  ["jbuilder" "subst" "-p" name] {pinned}
  ["jbuilder" "build" "-p" name "-j" jobs]
]
