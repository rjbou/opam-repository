opam-version: "2.0"
name: "qcheck"
version: "0.5.1"
synopsis: "QuickCheck inspired property-based testing for OCaml."
description: """
This module allows to check invariants (properties of some types) over
randomly generated instances of the type. It provides combinators for
generating instances and printing them."""
maintainer: "simon.cruanes@inria.fr"
authors: "Simon Cruanes <simon.cruanes@inria.fr>"
tags: ["property" "quickcheck" "test"]
homepage: "https://github.com/c-cube/qcheck/"
doc: "http://cedeela.fr/~simon/software/qcheck/QCheck.html"
bug-reports: "https://github.com/c-cube/qcheck/issues"
depends: [
  "base-bytes"
  "base-unix"
  "ocaml" {>= "4.00.0" & < "4.06.0"}
  "ocamlfind"
  "ounit"
]
conflicts: [
  "ounit" {< "2.0"}
]
flags: light-uninstall
build: [
  ["ocaml" "setup.ml" "-configure" "--prefix" prefix]
  [make "build"]
]
install: [make "install"]
remove: ["ocamlfind" "remove" "qcheck"]
dev-repo: "git+https://github.com/c-cube/qcheck.git"
url {
  src: "https://github.com/c-cube/qcheck/archive/0.5.1.tar.gz"
  checksum: "md5=3faa4a116047a418fbb2d3227f049182"
