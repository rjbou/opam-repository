depends: [
  "conf-pkg-config" {build}
]
flags: conf
build: ["pkg-config" "glew"]
depexts: [
  ["glew-devel"] {os-distribution = "fedora"}
  ["libglew-dev"] {os-distribution = "debian"}
  ["libglew-dev"] {os-distribution = "ubuntu"}
