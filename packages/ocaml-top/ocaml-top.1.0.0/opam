depends: [
  "conf-gtksourceview" {= "2"}
  "lablgtk" {>= "2.16.0"}
  "ocaml"
  "ocp-build" {>= "1.99.6-beta" & < "1.99.8-beta"}
  "ocp-indent" {>= "1.3.0" & < "1.4.0"}
  "ocp-index" {>= "0.2.0" & < "1.0.0"}
]
build: [
  [
    "./configure"
    "-install-bin"
    bin
    "-install-lib"
    lib
    "-install-doc"
    "%{doc}%/ocaml-top"
    "-install-data"
    "%{prefix}%/share/ocaml-top"
  ]
  [make]
]
install: [make "install"]
remove: [
  [
    "./configure"
    "-install-bin"
    bin
    "-install-lib"
    lib
    "-install-doc"
    "%{doc}%/ocaml-top"
    "-install-data"
    "%{prefix}%/share/ocaml-top"
  ]
  [make "uninstall"]
]
