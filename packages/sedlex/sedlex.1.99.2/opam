  "ocaml" {>= "4.02.0" & < "4.03.0"}
  "ocamlfind" {>= "1.5.0"}
  "ppx_tools" {>= "0.99"}
]
flags: light-uninstall
build: [
  [make "all"]
  [make "opt"]
]
