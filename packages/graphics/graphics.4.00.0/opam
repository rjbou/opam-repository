  "ocaml" {= "4.00.0"}
]
build: [
  ["chmod" "+x" "install.sh"]
  [
    "./install.sh"
    "build"
    "%{ocaml:preinstalled}%"
    "%{ocaml:lib}%"
    make
    "allopt" {ocaml:native}
  ]
]
install: [
  "./install.sh"
  "install"
  "%{ocaml:preinstalled}%"
  "%{_:lib}%"
  make
  stublibs
  "installopt" {ocaml:native}
]
