opam-version: "2.0"
name: "cairo"
version: "0.4.2"
synopsis: "Binding to Cairo, a 2D Vector Graphics Library."
description: """
This is a binding to Cairo, a 2D graphics library with support for
multiple output devices. Currently supported output targets include
the X Window System, Quartz, Win32, image buffers, PostScript, PDF,
and SVG file output."""
maintainer: "Christophe.Troestler@umons.ac.be"
authors: [
  "Christophe Troestler <Christophe.Troestler@umons.ac.be>"
  "Pierre Hauweele <antegallya@gmail.com>"
]
license: "LGPL-3.0 with OCaml linking exception"
homepage: "http://forge.ocamlcore.org/projects/cairo/"
bug-reports:
  "https://forge.ocamlcore.org/tracker/?atid=1104&group_id=246&func=browse"
depends: [
  "conf-autoconf" {build}
  "conf-cairo" {build}
  "ocaml" {< "4.06.0"}
  "ocamlbuild" {build}
  "ocamlfind" {build}
]
depopts: ["lablgtk"]
conflicts: ["cairo2"]
available: os != "macos"
flags: light-uninstall
build: [
  [
    "ocaml"
    "setup.ml"
    "-configure"
    "--prefix"
    prefix
    "--%{lablgtk:enable}%-lablgtk2"
  ]
  ["ocaml" "setup.ml" "-build"]
  ["ocaml" "setup.ml" "-doc"] {with-doc}
]
install: ["ocaml" "setup.ml" "-install"]
remove: ["ocamlfind" "remove" "cairo2"]
dev-repo: "git+https://github.com/Chris00/ocaml-cairo.git"
url {
  src: "https://download.ocamlcore.org/cairo/cairo/0.4.2/cairo-0.4.2.tar.gz"
  checksum: "md5=cbd64bfe6a3eb120ae98deb5ce6980ae"
}
