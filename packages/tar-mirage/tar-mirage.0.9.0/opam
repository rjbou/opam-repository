doc: "https://mirage.github.io/ocaml-tar/"
bug-reports: "https://github.com/mirage/ocaml-tar/issues"
depends: [
  "cstruct" {>= "1.9.0"}
  "io-page"
  "io-page-unix" {with-test}
  "jbuilder" {build & >= "1.0+beta7"}
  "lwt"
  "mirage-block-unix" {with-test & >= "2.5.0"}
  "mirage-types-lwt" {>= "3.0.0"}
  "ocaml" {>= "4.04.2"}
  "ounit" {with-test}
  "re"
  "result"
  "tar" {< "1.0.0"}
]
conflicts: [
  "mirage-kv" {>= "2.0.0"}
  "mirage-types-lwt" {< "3.0.0"}
]
