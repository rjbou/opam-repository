  "ocamlbuild" {build}
  "ocamlfind"
  "stdint"
  "yojson"
  "zarith"
]
flags: light-uninstall
build: [make "PREFIX=%{prefix}%" "-C" "src/ocaml-output"]
install: [make "PREFIX=%{prefix}%" "-C" "src/ocaml-output" "install"]
