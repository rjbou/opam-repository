bug-reports: "https://github.com/zoggy/stog-rdf/issues"
depends: [
  "ocaml" {>= "4.02.1"}
  "rdf" {>= "0.10.0"}
  "stog" {= "0.16.0"}
]
flags: light-uninstall
build: [make "all"]
install: [make "install"]
