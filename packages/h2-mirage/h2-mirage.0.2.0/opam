depends: [
  "cstruct"
  "dune" {build}
  "faraday-lwt"
  "h2-lwt" {>= "0.2.0" & < "0.3.0"}
  "lwt"
  "mirage-conduit"
  "ocaml" {>= "4.04"}
]
