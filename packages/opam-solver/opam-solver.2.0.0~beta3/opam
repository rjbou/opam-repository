bug-reports: "https://github.com/ocaml/opam/issues"
depends: [
  "cudf" {<= "0.7"}
  "dose3" {>= "5"}
  "ocaml" {>= "4.01.0"}
  "opam-core" {= "2.0.0~beta3"}
  "opam-format" {= "2.0.0~beta3"}
]
