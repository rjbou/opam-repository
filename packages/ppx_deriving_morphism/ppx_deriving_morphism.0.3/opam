  "ocaml"
  "ocamlfind" {build}
  "ounit" {with-test}
  "ppx_deriving" {>= "3.0" & < "4.0"}
  "ppx_import" {with-test}
]
build: [
  [
    "ocaml"
    "pkg/build.ml"
    "native=%{ocaml:native}%"
    "native-dynlink=%{ocaml:native-dynlink}%"
  ]
  [
    "ocamlbuild"
    "-classic-display"
    "-use-ocamlfind"
    "src_test/test_ppx_morphism.byte"
    "--"
  ] {with-test}
]
