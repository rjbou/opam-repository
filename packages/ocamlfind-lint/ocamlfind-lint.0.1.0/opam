homepage: "https://github.com/zoggy/findlib-lint"
doc: "https://github.com/zoggy/findlib-lint"
depends: ["ocaml" "ocamlfind"]
flags: light-uninstall
build: [make "all"]
install: [make "install-lib"]
remove: ["ocamlfind" "remove" "findlib-lint"]
