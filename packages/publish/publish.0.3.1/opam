]
license: "LGPL-3.0 with OCaml linking exception"
homepage: "http://opam.ocaml.org"
bug-reports: "https://github.com/OCamlPro/opam-publish/issues"
depends: [
  "cmdliner" {build}
  "github" {build & >= "1.0.0" & < "2.0.0"}
  "ocaml"
  "ocamlfind" {build}
  "opam-lib" {build & = "1.2.2"}
]
flags: plugin
build: make
