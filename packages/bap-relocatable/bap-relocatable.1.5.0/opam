opam-version: "2.0"
name: "bap-relocatable"
version: "1.5.0"
synopsis:
  "Provides a brancher service for BAP that handles certain relocations"
maintainer: "Ivan Gotovchits <ivg@ieee.org>"
authors: "BAP Team"
license: "MIT"
homepage: "https://github.com/BinaryAnalysisPlatform/bap/"
bug-reports: "https://github.com/BinaryAnalysisPlatform/bap/issues"
depends: [
  "bap-std" {= "1.5.0"}
  "ocaml" {>= "4.03" & < "4.06"}
  "ogre"
]
build: [
  ["./configure" "--prefix=%{prefix}%" "--enable-relocatable"]
  [make]
]
install: [make "install"]
remove: [
  ["ocamlfind" "remove" "bap-plugin-relocatable"]
  ["bapbundle" "remove" "relocatable.plugin"]
]
dev-repo: "git://github.com/BinaryAnalysisPlatform/bap/"
url {
  src: "https://github.com/BinaryAnalysisPlatform/bap/archive/v1.5.0.tar.gz"
  checksum: "md5=9eed04fda6610dd4a8aa83948abfffc3"
  mirrors: "https://mirrors.aegis.cylab.cmu.edu/bap/1.5.0/v1.5.0.tar.gz"
}
