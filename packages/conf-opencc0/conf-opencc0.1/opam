opam-version: "2.0"
name: "conf-opencc0"
version: "1"
synopsis:
  "Virtual package relying on opencc v0 (libopencc.so.1) installation"
description:
  "This package can install only if the libopencc v0 is available on the system"
maintainer: "zandoye@gmail.com"
authors: "ZAN DoYe"
license: "MIT"
tags: ["Chinese conversion" "opencc"]
homepage: "https://bitbucket.org/zandoye/ocaml-opencc0/"
bug-reports: "https://bitbucket.org/zandoye/ocaml-opencc0/issues"
flags: conf
build: ["sh" "-exec" "cc $CFLAGS test.c -l:libopencc.so.1"]
post-messages:
  "If the libopencc0 library is not installed by the system package manager, make sure that the path of the directory containing libopencc.so.1 is included in env-var LD_LIBRARY_PATH(for ld) and LIBRARY_PATH(for cc)"
    {failure}
depexts: [
  ["libopencc1"] {os-distribution = "debian"}
  ["libopencc1"] {os-distribution = "ubuntu"}
  ["libopencc1"] {os-family = "suse"}
]
