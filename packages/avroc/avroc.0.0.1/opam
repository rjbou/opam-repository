depends: [
  "ctypes"
  "ctypes-foreign"
  "ocaml" {>= "4.00.0" & < "4.03.0"}
  "ocamlbuild" {build}
  "ocamlfind" {build}
]
flags: light-uninstall
build: [make avroc]
install: [make "install"]
remove: ["ocamlfind" "remove" "avroc"]
