opam-version: "2.0"
name: "conf-wxwidgets"
version: "3.0"
synopsis:
  "Virtual package to check the availability of wxWidgets 3.0 development packages"
maintainer: "Fabrice Le Fessant <fabrice.le_fessant@ocamlpro.com>"
authors: "Julian Smart"
license: "LGPL+EXN-BIN"
homepage: "https://www.wxwidgets.org/"
bug-reports: "https://github.com/ocaml/opam-repository/issues"
flags: conf
build: ["wx-config" "--libs"]
post-messages:
  "This package requires wxWidgets 3.0 development packages installed on your system"
    {failure}
depexts: [
  ["libwxgtk3.0-dev" "libwxgtk-webview3.0-dev" "libwxgtk-media3.0-dev"]
    {os-distribution = "ubuntu"}
  [
    "libwxgtk3.0-dev"
    "wx3.0-headers"
    "libwxgtk-webview3.0-dev"
    "libwxgtk-media3.0-dev"
  ] {os-distribution = "debian"}
]
