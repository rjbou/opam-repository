  "Pierre Chambart"
  "Roman Vorobets"
  "Stéphane Glondu"
  "Sylvain Le Gall"
  "Zhenya Lykhovyd"
  "ygrek"
]
license: "LGPL-2.1 with OCaml linking exception"
homepage: "http://ygrek.org.ua/p/extunix"
doc: "http://ygrek.org.ua/p/ocaml-extunix/api/index.html"
bug-reports: "https://github.com/ygrek/extunix/issues"
depends: [
  "base-bigarray"
  "base-bytes"
  "base-unix"
  "camlp4" {build}
  "ocaml"
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "ounit" {with-test & >= "1.0.3"}
]
flags: light-uninstall
build: [
  [
    "ocaml"
    "setup.ml"
    "-configure"
    "--%{ounit:enable}%-tests"
    "--prefix"
    prefix
  ] {ocaml:version >= "4.02.0"}
  ["ocaml" "setup.ml" "-configure" "--prefix" prefix]
    {ocaml:version < "4.02.0"}
  ["ocaml" "setup.ml" "-build"]
  ["ocaml" "setup.ml" "-test"] {with-test}
  ["ocaml" "setup.ml" "-doc"] {with-doc}
]
install: ["ocaml" "setup.ml" "-install"]
remove: ["ocamlfind" "remove" "extunix"]
dev-repo: "git://github.com/ygrek/extunix.git"
url {
  src:
    "http://ygrek.org.ua/p/release/ocaml-extunix/ocaml-extunix-0.1.6.tar.gz"
