opam-version: "2.0"
name: "cudf"
version: "0.9"
synopsis: "CUDF library (part of the Mancoosi tools)"
description: """
CUDF (for Common Upgradeability Description Format) is a format for
describing upgrade scenarios in package-based Free and Open Source
Software distribution."""
maintainer: "roberto@dicosmo.org"
authors: [
  "Pietro Abate"
  "Roberto di Cosmo <roberto@dicosmo.org>"
  "Stefano Zacchiroli"
]
homepage: "http://www.mancoosi.org/cudf/"
bug-reports:
  "https://gforge.inria.fr/tracker/?atid=13811&group_id=4385&func=browse"
depends: [
  "conf-perl" {build}
  ("extlib" | "extlib-compat")
  "ocaml"
  "ocamlbuild" {build}
]
build: [make "all" "opt"]
install: [
  make
  "install"
  "DESTDIR=%{prefix}%/"
  "OCAMLLIBDIR=lib"
  "BINDIR=bin"
  "LIBDIR=lib"
  "INCDIR=include"
]
remove: [
  make
  "uninstall"
  "DESTDIR=%{prefix}%/"
  "OCAMLLIBDIR=lib"
  "BINDIR=bin"
  "LIBDIR=lib"
  "INCDIR=include"
]
dev-repo: "git+https://scm.gforge.inria.fr/anonscm/git/cudf/cudf.git"
url {
  src: "https://gforge.inria.fr/frs/download.php/36602/cudf-0.9.tar.gz"
  checksum: "md5=a4c0e652e56e74c7b388a43f9258d119"
}
