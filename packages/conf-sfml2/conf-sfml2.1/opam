depends: [
  "conf-pkg-config" {build}
]
flags: conf
build: ["pkg-config" "sfml-all"]
depexts: [
  ["libsfml-dev"] {os-distribution = "debian"}
  ["libsfml-dev"] {os-distribution = "ubuntu"}
  ["sfml2-devel"] {os-distribution = "mageia"}
]
