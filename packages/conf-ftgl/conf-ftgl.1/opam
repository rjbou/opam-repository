depends: [
  "conf-pkg-config" {build}
]
flags: conf
build: ["pkg-config" "ftgl"]
depexts: [
  ["ftgl-devel"] {os-distribution = "fedora"}
  ["libftgl-dev"] {os-distribution = "debian"}
  ["libftgl-dev"] {os-distribution = "ubuntu"}
  ["libftgl-devel"] {os-distribution = "mageia"}
]
