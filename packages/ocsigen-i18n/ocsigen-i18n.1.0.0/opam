depends: [
  "ocaml" {>= "4.03" & < "4.08.0"}
  "ocamlfind" {build}
]
flags: light-uninstall
build: [make "build"]
install: [make "bindir=%{bin}%" "install"]
remove: [
  ["rm" "-f" "%{bin}%/ocsigen-i18n-generator"]
  ["rm" "-f" "%{bin}%/ocsigen-i18n-rewriter"]
  ["rm" "-f" "%{bin}%/ocsigen-i18n-checker"]
]
