depends: [
  "ocaml" {>= "4.02.2" & < "4.03"}
  "ocamlbuild" {build}
  "ocamlfind" {build & >= "1.5.4"}
  "ounit" {with-test}
  "ppx_tools" {>= "0.99.2"}
]
