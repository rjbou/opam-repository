  "rm"
  "-rf"
  "%{prefix}%/lib/fstar"
  "%{prefix}%/doc/fstar"
  "%{prefix}%/etc/fstar"
  "%{prefix}%/bin/fstar"
  "%{prefix}%/share/fstar"
]
