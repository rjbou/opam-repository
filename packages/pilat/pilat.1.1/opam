depends: [
  "frama-c"
  "lacaml"
  "ocaml" {> "4.02.3"}
  "ocamlfind"
  "zarith"
]
conflicts: [
  "frama-c" {>= "17.0"}
]
flags: light-uninstall
build: ["sh" "make.sh"]
install: ["sh" "install.sh"]
remove: ["ocamlfind" "remove" "pilat"]
