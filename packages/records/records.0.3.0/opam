depends: [
  "ocaml" {>= "4.00.0"}
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "ounit" {with-test}
  "yojson"
]
depopts: [
  "bisect_ppx" {with-test}
]
flags: light-uninstall
build: [
  [make]
  [make "check"] {with-test}
]
install: [make "install"]
remove: ["ocamlfind" "remove" "records"]
