opam-version: "2.0"
name: "pattern"
version: "0.1.0"
synopsis: "Run-time patterns that explain match failures"
description:
  "pattern is a PPX extension that generates functions from patterns that explain match failures by returning the common context and the list of differences between a pattern and a value"
maintainer: "Thierry Martinez <Thierry.Martinez@inria.fr>"
authors: "Thierry Martinez <Thierry.Martinez@inria.fr>"
license: "BSD"
homepage: "https://gitlab.inria.fr/tmartine/pattern"
bug-reports: "https://gitlab.inria.fr/tmartine/pattern/issues"
depends: [
  "dune" {>= "1.9.1"}
  "ocaml" {>= "4.04.1" & < "4.08.0"}
  "ppx_deriving"
  "ppxlib" {< "0.9.0"}
  "stdcompat"
]
build: ["dune" "build" "-p" name "-j" jobs]
dev-repo: "git+https://gitlab.inria.fr/tmartine/pattern.git"
url {
  src:
