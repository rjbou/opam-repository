bug-reports: "francois.pottier@inria.fr"
depends: [
  "cppo" {build}
  "cppo_ocamlbuild" {build}
  "ocaml" {>= "4.02.2" & < "4.06"}
  "ocamlbuild" {build}
  "ocamlfind"
  "ppx_deriving" {>= "4.0"}
  "ppx_tools"
  "result"
]
build: make
install: [make "install"]
remove: [make "uninstall"]
