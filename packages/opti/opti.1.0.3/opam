opam-version: "2.0"
name: "opti"
version: "1.0.3"
synopsis:
  "DSL to generate fast incremental C code from declarative specifications"
description:
  "Generate C code to incrementally compute sums, products and other expressions, without recomputing them from scratch every time."
maintainer: "Johan Magnus Jonsson <jmagnusj@gmail.com>"
authors: "Johan Magnus Jonsson <jmagnusj@gmail.com>"
license: "BSD3"
homepage: "https://github.com/magnusjonsson/opti"
bug-reports: "https://github.com/magnusjonsson/opti/issues"
depends: [
  "dune" {build}
  "ocaml"
  "ounit" {with-test}
]
build: [
  ["dune" "build" "-p" "opti" "-j" jobs]
  ["dune" "runtest" "-p" "opti" "-j" jobs] {with-test}
]
dev-repo: "git+https://github.com/magnusjonsson/opti.git"
url {
  src:
