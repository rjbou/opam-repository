  "Ralf Treinen <ralf.treinen@irif.fr>"
  "Yann RÃ©gis-Gianas <yann.regis-gianas@irif.fr>"
]
license: "GPL3"
homepage: "https://github.com/colis-anr/morbig"
bug-reports: "https://github.com/colis-anr/morbig/issues"
depends: [
  "menhir" {build}
  "ocaml" {build & >= "4.03"}
  "ocamlbuild" {build}
  "ppx_deriving_yojson"
  "visitors"
  "yojson"
]
available: os != "macos"
build: make
run-test: [make "check"]
install: [make "install"]
remove: [make "uninstall"]
dev-repo: "git://github.com/colis-anr/morbig.git"
