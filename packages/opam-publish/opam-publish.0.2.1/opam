homepage: "http://opam.ocaml.org"
bug-reports: "https://github.com/OCamlPro/opam-publish/issues"
depends: [
  "cmdliner" {build}
  "github" {build & >= "0.9.0" & < "1.0.0"}
  "ocaml"
  "ocamlfind" {build}
  "opam-lib" {build & = "1.2.0"}
]
flags: plugin
build: make
dev-repo: "git+https://github.com/OCamlPro/opam-publish.git"
