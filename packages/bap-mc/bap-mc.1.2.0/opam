depends: [
  "bap-std" {= "1.2.0"}
  "cmdliner"
  "oasis" {build & = "0.4.7"}
  "ocaml"
]
flags: light-uninstall
build: [
  ["./configure" "--prefix=%{prefix}%" "--mandir=%{man}%" "--enable-mc"]
  [make]
]
install: [make "install"]
remove: ["rm" "-f" "%{bin}%/bap-mc"]
