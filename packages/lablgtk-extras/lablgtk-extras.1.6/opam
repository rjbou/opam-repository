  "conf-gtksourceview" {= "2"}
  "config-file" {>= "1.1"}
  "lablgtk" {>= "2.16.0"}
  "ocaml" {>= "4.02.0"}
  "ocamlfind"
  "xmlm" {>= "1.1.1"}
]
flags: light-uninstall
build: [
  ["./configure" "--prefix" prefix]
  [make "all"]
]
install: [make "install"]
remove: ["ocamlfind" "remove" "lablgtk2-extras"]
