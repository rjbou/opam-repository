opam-version: "2.0"
name: "ppx_blob"
version: "0.2"
synopsis: "Include a file as a string at compile time"
maintainer: "contact@coherentgraphics.co.uk"
authors: "John Whitington"
homepage: "https://github.com/johnwhitington/ppx_blob"
