  "camlp4" {build}
  "cmdliner"
  "cstruct" {>= "0.6.0" & < "2.0"}
  "ocaml" {>= "4.01.0" & < "4.06.0"}
  "ocamlbuild" {build}
  "ocamlfind"
  "ounit" {with-test}
  "re"
  "type_conv" {build}
]
