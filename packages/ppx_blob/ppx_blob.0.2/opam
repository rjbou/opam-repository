depends: [
  "ocaml" {>= "4.02.0"}
  "ocamlfind" {build & >= "1.5.2"}
  "ppx_tools"
]
flags: light-uninstall
build: [
  [make "native-code"] {ocaml:native}
  [make "byte-code"] {!ocaml:native}
]
install: [make "install"]
remove: ["ocamlfind" "remove" "ppx_blob"]
