bug-reports: "https://github.com/ocaml/opam-repository/issues"
depends: [
  "conf-pkg-config" {build}
]
flags: conf
build: ["pkg-config" "krb5-gssapi" "mit-krb5-gssapi"]
depexts: [
  ["libkrb5-dev"] {os-distribution = "debian"}
  ["libkrb5-dev"] {os-distribution = "ubuntu"}
]
