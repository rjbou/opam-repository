depends: [
  "alcotest" {with-test}
  "bos"
  "cmdliner"
  "dune" {build}
  "fmt"
  "logs"
  "ocaml" {>= "4.06.0"}
  "odoc"
  "opam-format"
  "opam-state"
  "re"
  "rresult"
]
build: [
  ["dune" "subst"]
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
